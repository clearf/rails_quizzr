<div class="quizzes_container">
<% @quizzes.each do |quiz| %>
    <div class="quiz offset1">
        <p><%= link_to quiz.name, quiz %></p>
        <p class="quiz_options">
            <%= link_to_function "add answers", "AnswerKey(this,"+quiz.id.to_s+")" %>
        </p>
    <div class="questions offset1">
        <% quiz.questions.each do |question| %>
            <div class="question">
                <%= question.content %>
                <div class="answers offset1">
                    <% question.answers.each do |answer| %>
                        <% if answer.is_correct %>
                            <div class="answer correct"><%= answer.content %></div>
                        <% else %>
                            <div class="answer"><%= answer.content %></div>
                        <% end %>
                    <% end %>
                </div>
            </div>
        <% end %>
        </div>
    </div>
<% end %>
</div>

    